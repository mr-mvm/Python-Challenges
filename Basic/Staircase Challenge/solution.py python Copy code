def staircase(n):
    """
    Prints a right-aligned staircase of size `n`.

    Parameters:
        n (int): The height of the staircase.

    Returns:
        None: Prints the staircase pattern.
    """
    for i in range(1, n + 1):
        print(" " * (n - i) + "#" * i)

if __name__ == '__main__':
    n = int(input("Enter the size of the staircase: ").strip())
    staircase(n)
